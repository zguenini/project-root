# --- Environnement ---
NODE_ENV=development
PORT=3000

# --- API Backend ---
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# --- Auth (si gestion par frontend) ---
NEXT_PUBLIC_AUTH_CLIENT_ID=your_auth_client_id
NEXT_PUBLIC_AUTH_DOMAIN=your_auth_domain

# --- Stripe/Paypal pour UI (clé publique uniquement !) ---
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=your_stripe_public_key

# --- Internationalisation ---
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,fr

# --- Sentry monitoring ---
NEXT_PUBLIC_SENTRY_DSN=

# --- Analytics (GA, Mixpanel...) ---
NEXT_PUBLIC_GA_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# --- Variables optionnelles ---
NEXT_PUBLIC_APP_ENV=dev
NEXT_PUBLIC_FEATURE_FLAGS=

# Toujours préfixer par NEXT_PUBLIC_ pour exposer côté navigateur.
